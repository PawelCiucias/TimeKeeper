<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:pav.timeKeeper.mobile"
             x:Class="pav.timeKeeper.mobile.Views.ReportsPage"
             Visual="Material"
             local:Bootstraper.AutoWireViewModel="True">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding ActionableTasks, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding }"
                    </StackLayout>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>